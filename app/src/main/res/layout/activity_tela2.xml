<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/were"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Tela2">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="351dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bolsa" />

    <TextView
        android:id="@+id/lpares"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="60dp"
        android:text="LPA:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/vpa"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:text="VPA:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pvp"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/pvp"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:text="P/VP:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/lpares"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/roe"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:text="ROE:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/vpa"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/lp"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="P/L:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/roe"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/tvlpa"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvpl"
        app:layout_constraintStart_toEndOf="@+id/lp" />

    <TextView
        android:id="@+id/tvvpa"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvpvp"
        app:layout_constraintStart_toEndOf="@+id/pvp" />

    <TextView
        android:id="@+id/tvroe"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvvpa"
        app:layout_constraintStart_toEndOf="@+id/vpa" />

    <TextView
        android:id="@+id/tvpvp"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="56dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lpares" />

    <TextView
        android:id="@+id/tvpl"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvroe"
        app:layout_constraintStart_toEndOf="@+id/roe" />

</androidx.constraintlayout.widget.ConstraintLayout>